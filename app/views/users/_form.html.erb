<%= form_for(@user) do |f| %>
  
  <div class="signup_form">
    <h3>Sign up!</h3>
  <div class="signup_field1">
    <%= f.text_field :first_name, :autofocus => true, placeholder: 'First Name'%>
  </div>
   <div class="signup_field3">
    <%= f.text_field :last_name, :autofocus => true, placeholder: 'Last Name'%>
  </div>
  <div class="signup_field">
    <%= f.email_field :email, :autofocus => true, placeholder: 'Email'%>
  </div>
  <div class="signup_field2">
    <%= f.password_field :password, :autofocus => true, placeholder: 'Password'%>
  </div>
  <div class="signup_field">
    <%= f.password_field :password_confirmation, :autofocus => true, placeholder: 'Password Confirmation'%>
  </div>
  
  <h4>Now for the fun profile info:</h4>


  <div class="signup_button">
    <%= f.submit "Push it real good!" %>
  </div>
<% end %>