<%= form_for(@user) do |f| %>
  
  <div class="signup_form">
  <p>
    <%= f.email_field :first_name, :autofocus => true, placeholder: 'First Name'%>
  </p>
   <p>
    <%= f.email_field :last_name, :autofocus => true, placeholder: 'Last Name'%>
  </p>
  <p>
    <%= f.email_field :email, :autofocus => true, placeholder: 'Email'%>
  </p>
  <p>
    <%= f.password_field :password, :autofocus => true, placeholder: 'Password'%>
  </p>
  <p>
    <%= f.password_field :password_confirmation, :autofocus => true, placeholder: 'Password Confirmation'%>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>