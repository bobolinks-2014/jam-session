<!DOCTYPE html>
<html>
<head>
  <title>JamSession</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <nav>
      <ul>
      <% if logged_in? %>
        <li><%= link_to "Profile", current_user %></li>
        <li><%= link_to "Logout", logout_path %></li>
      <% else %>
        <%= form_for(:user, :url => {:controller => 'sessions', :action => 'login'}) do |f| %>
        <li><%= f.email_field :email, :autofocus => true, placeholder: 'email' %></li>
        <li><%= f. password_field :password, :autofocus => true, placeholder: 'password' %></li>
        <li><%= f.submit 'Sign In' %></li>
        <% end %>
        <li><%= link_to "Sign Up", new_user_path %></li>
      <% end %>
      </ul>
    </nav>
  </header>

<%= yield %>

</body>
</html>


